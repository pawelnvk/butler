{
  "extends": ["tslint:recommended", "tslint-react", "tslint-config-prettier", "tslint-config-airbnb"],
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts"
    ]
  },
  "rules": {
    "import-name": false,
    "variable-name": [true, "ban-keywords", "check-format", "allow-pascal-case"]
  }
}
